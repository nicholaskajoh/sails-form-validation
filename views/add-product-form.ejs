<div class="container">
  <h2>Product form</h2>

  <form method="post" action="">
    <input type="hidden" name="_csrf" value="<%= _csrf %>" />

    <!-- name -->
    <div class="form-group">
      <label>Name</label>
      <input class="form-control" type="text" name="name" value="<%= old.name %>">
    </div>
    <!-- ./name -->

    <!-- price -->
    <div class="form-group">
      <label>Price</label>
      <input class="form-control" type="number" step="0.01" name="price" value="<%= old.price %>">
    </div>
    <!-- ./price -->

    <!-- label -->
    <div class="form-group">
      <label>Label</label>
      <!-- Label would normal be a select box.
      I used text a input so that the validation functionality can be tested. -->
      <input class="form-control" type="text" name="label" value="<%= old.label %>">
    </div>
    <!-- ./label -->

    <div class="form-group">
      <button class="btn btn-primary" type="submit">Submit</button>
    </div>
  </form>
</div>